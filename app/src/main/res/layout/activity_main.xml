<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebg">

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/new_game"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/btn_bg"
            android:text="@string/new_game"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/fight"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/btn_bg"
            android:text="@string/fight"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/conn_fight"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/btn_bg"
            android:text="@string/fight_connection"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_main_logout"
        android:layout_width="171dp"
        android:layout_height="67dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/btn_bg"
        android:text="@string/bt_main_logout"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="171dp"
        android:layout_height="67dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_bg"
        android:text="@string/feedback_email"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>